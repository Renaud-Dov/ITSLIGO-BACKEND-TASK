<div class="min-h-screen bg-gray-100 py-8 flex flex-col justify-center relative overflow-hidden lg:py-12">
    {{#if error}}
        <div role="alert" class="bg-red-100 rounded-lg py-5 px-6 mb-4 text-base text-red-700 mb-3 mx-auto w-45">
            <strong class="mr-1">Error:</strong> {{error}}
            <button type="button" data-bs-dismiss="alert" aria-label="Close"
                    class="btn-close  box-content w-4 h-4 p-1 ml-auto text-yellow-900
                 border-none rounded-none opacity-50 focus:shadow-none focus:outline-none
                  focus:opacity-100 hover:text-yellow-900 hover:opacity-75 hover:no-underline">X
            </button>
        </div>
    {{/if}}
    {{#if success}}
        <div role="alert" class="bg-green-100 rounded-lg py-5 px-6 mb-4 text-base text-green-700 mb-3 mx-auto w-45">
            <strong class="mr-1">Article added </strong>
            <button type="button" data-bs-dismiss="alert" aria-label="Close"
                    class="btn-close  box-content w-4 h-4 p-1 ml-auto text-green-900
                 border-none rounded-none opacity-50 focus:shadow-none focus:outline-none
                  focus:opacity-100 hover:text-green-900 hover:opacity-75 hover:no-underline">X
            </button>
        </div>
    {{/if}}
    <div class="relative w-full px-6 py-6 bg-white shadow-xl shadow-slate-700/10 ring-1 ring-gray-900/5 md:max-w-3xl md:mx-auto lg:max-w-4xl    ">

        <form class="flex flex-col justify-center" method="post" >
            <h1 class="text-3xl">Add new article</h1>
            <div class="py-12">
                <div class="grid  gap-6">
                    <label class="block">
                        <span class="text-gray-700">Title</span>
                        <input class="mt-1 block w-full rounded-md bg-gray-100 border-transparent focus:border-gray-500 focus:bg-white focus:ring-0"
                               type="text" value={{news.title}}>
                    </label>
                    <label class="block">
                        <span class="text-gray-700">Description</span>
                        <input class="mt-1 block w-full rounded-md bg-gray-100 border-transparent focus:border-gray-500 focus:bg-white focus:ring-0"
                               type="email" value={{news.description}}>
                    </label>
                    <label class="block">
                        <span class="text-gray-700">Image Link</span>
                        <input class="mt-1 block w-full rounded-md bg-gray-100 border-transparent focus:border-gray-500 focus:bg-white focus:ring-0"
                               type="email" value={{news.image}}>
                    </label>
                    <label class="block">
                        <span class="text-gray-700">Link to markdown</span>
                        <input class="mt-1 block w-full rounded-md bg-gray-100 border-transparent focus:border-gray-500 focus:bg-white focus:ring-0"
                               type="email" value={{news.md}}>
                    </label>

                </div>
                <button type=submit
                        class="mt-6 block w-full h-8 rounded-md bg-gray-200 border-transparent focus:border-gray-500 focus:bg-white focus:ring-0">
                    Summit
                </button>


            </div>
        </form>
    </div>
</div>
