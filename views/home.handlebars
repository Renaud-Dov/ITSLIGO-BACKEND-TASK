<div class="">
    <div class="flex flex-col  m-4">
        {{#if lastViewed}}
            <h1 class="text-3xl m-5">Latest posts read</h1>
            <div class="flex flex-wrap mx-auto gap-4 justify-center">
                {{#each lastViewed}}
                    {{> card data=this}}
                {{/each}}
            </div>
        {{/if}}
        <h1 class="text-3xl m-5">Latest posts</h1>
        <div class="flex flex-wrap mx-auto gap-4 justify-center">
            {{#each news}}
                {{> card data=this}}
            {{/each}}
        </div>
    </div>
</div>