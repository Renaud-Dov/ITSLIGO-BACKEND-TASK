<div class="min-h-screen bg-gray-50 py-8 flex flex-col justify-center relative overflow-hidden lg:py-12">
    <div class="relative w-full  bg-white shadow-xl shadow-slate-700/10 ring-1 ring-gray-900/5 md:max-w-3xl md:mx-auto">
        <img src={{newsItem.image}} alt="" class="mx-auto w-full">
        <div class="mt-8 prose prose-slate mx-auto lg:prose-lg mx-6 my-12 lg:max-w-4xl lg:pt-16 lg:pb-28">


            <h1 class="text-3xl my-0 font-semibold leading-tight tracking-tight text-center text-gray-900 sm:text-4xl sm:leading-10">
                {{ newsItem.title }}
            </h1>
            <p class="text-center my-1 text-gray-500 sm:text-lg">
                {{ newsItem.description }}
            </p>
            {{{ md }}}
        </div>
    </div>
</div>


